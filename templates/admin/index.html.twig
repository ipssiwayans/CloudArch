{% extends 'app.html.twig' %}

{% block title %}Admin | Cloud Arch{% endblock %}

{% block content %}
    <h1 class="text-center">Administration</h1>
    <br/>
    <div class="row">
        <div class="card radius-10 w-100">
            <h2 class="mt-2">Utilisateurs</h2>
            <hr/>
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="userData" class="table table-striped table-bordered" style="width:100%">
                            <thead>
                            <tr>
                                <th>ID</th>
                                <th>Nom</th>
                                <th>Email</th>
                                <th>Stockage Utilisé</th>
                                <th>Stockage Disponible</th>
                                <th class="text-center">Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for data in users %}
                                <tr>
                                    <td>{{ data.user.id }}</td>
                                    <td>{{ data.user.firstname }} {{ data.user.lastname }}</td>
                                    <td>{{ data.user.email }}</td>
                                    <td>{{ data.usedStorage|format_size }}</td>
                                    <td>{{ data.availableStorage|format_size }}</td>
                                    <td>
                                        <div class="d-flex justify-content-evenly">
                                            <a class="btn btn-success" href="{{ path('admin_user_files', {'id': data.user.id}) }}">Voir les fichiers</a>
                                            <a class="btn btn-primary" href="{{ path('app_update', {'id': data.user.id}) }}">Modifier l'utilisateur</a>
                                        </div>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="6" class="text-center">Aucun utilisateur trouvé</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <h2>Statistiques des Fichiers</h2>
            <hr/>
            <div class="card">
{#                <ul>#}
{#                    <li>Nombre total de fichiers uploadés : {{ totalFiles }}</li>#}
{#                    <li>Nombre de fichiers uploadés aujourd’hui : {{ todayFiles }}</li>#}
{#                </ul>#}
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <h6 class="mb-0">Total de fichiers uploadé</h6>
                    </div>
                    <div class="chart-container3">
                        <div class="piechart-legend">
                            <h2 class="mb-1">{{ totalFiles }}</h2>
                            <h6 class="mb-0">Total des fichiers</h6>
                        </div>
                        <canvas id="chart1" data-total-files="{{ totalFiles }}" data-today-files="{{ todayFiles }}"></canvas>
                    </div>
                </div>
            </div>
            <h2>Répartition du Nombre de Fichiers par Client</h2>
            <hr/>
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="example" class="table table-striped table-bordered" style="width:100%">
                            <thead>
                            <tr>
                                <th>ID</th>
                                <th>Nom</th>
                                <th>Nombre de Fichiers</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for user in filesPerUser %}
                                <tr>
                                    <td>{{ user.id }}</td>
                                    <td>{{ user.firstname }} {{ user.lastname }}</td>
                                    <td>{{ user.fileCount }}</td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="3" class="text-center">Aucun utilisateur trouvé</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block scriptsPerso %}
    <script src="{{ asset('assets/js/index.js') }}"></script>
    <script src="{{ asset('assets/plugins/chartjs/chart.min.js') }}"></script>
{% endblock %}